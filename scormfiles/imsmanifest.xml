			<file href="scripts/jquery/jquery.js"/> 
			<file href="scripts/jquery/jquery.mousewheel.js"/> 
			<file href="scripts/jquery/jquery.xslTransform.js"/> 
			<file href="scripts/sarissa/sarissa.js"/> 
			<file href="scripts/sarissa/sarissa_ieemu_xpath.js"/> 
		</resource> 
	</resources> 
</manifest> 
